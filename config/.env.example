# PostgreSQL Configuration
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_POSTGRES_PASSWORD
POSTGRES_DB=n8n

# n8n Authentication
N8N_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_STRONG_N8N_PASSWORD

# n8n Encryption Key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=CHANGE_ME_32_CHAR_ENCRYPTION_KEY_HERE

# Domain Configuration
N8N_DOMAIN=n8n.awsdevzone.info
ARGOCD_DOMAIN=argo.awsdevzone.info

# Email for Let's Encrypt (change in base/cert-manager/letsencrypt-issuer.yaml)
LETSENCRYPT_EMAIL=your-email@example.com
